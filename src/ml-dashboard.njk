<script>
    // Dashboard data loading and rendering
    async function loadDashboardData() {
        try {
            // Try to fetch from API first
            const response = await fetch('/api/ml/dashboard');
            
            if (response.ok) {
                const result = await response.json();
                if (result.success) {
                    renderDashboard(result.data);
                    return;
                }
            }
            
            // Fallback to simulated data if API is not available
            console.log('API not available, using simulated data');
            const dashboardData = {
                stats: {
                    totalPredictions: 56,
                    activeInsights: 4,
                    modelsTrained: 1,
                    avgImpact: 0.72
                },
                insights: [
                    {
                        type: 'Improvement Pattern',
                        priority: 'high',
                        description: "'UX' improvements have highest average impact (0.64)",
                        action: 'Prioritize UX improvements for maximum impact',
                        confidence: 0.85,
                        category: 'optimization'
                    },
                    {
                        type: 'Timing Optimization',
                        priority: 'medium',
                        description: 'Improvements made around 19:00 have higher impact',
                        action: 'Schedule critical improvements for 19:00',
                        confidence: 0.75,
                        category: 'scheduling'
                    }
                ],
                predictions: [
                    { date: '2025-10-28', value: 0.701, type: 'Improvement Opportunities', confidence: 0.75 },
                    { date: '2025-10-29', value: 0.742, type: 'Improvement Opportunities', confidence: 0.75 },
                    { date: '2025-10-30', value: 0.568, type: 'Improvement Opportunities', confidence: 0.75 },
                    { date: '2025-10-31', value: 0.562, type: 'Improvement Opportunities', confidence: 0.75 },
                    { date: '2025-11-01', value: 0.552, type: 'Improvement Opportunities', confidence: 0.75 },
                    { date: '2025-11-02', value: 0.496, type: 'Improvement Opportunities', confidence: 0.75 }
                ]
            };
            
            renderDashboard(dashboardData);
            
        } catch (error) {
            console.error('Error loading dashboard data:', error);
            showError();
        }
    }
    
    function renderDashboard(data) {
        // Update stats
        document.getElementById('total-predictions').textContent = data.stats.totalPredictions;
        document.getElementById('active-insights').textContent = data.stats.activeInsights;
        document.getElementById('models-trained').textContent = data.stats.modelsTrained;
        document.getElementById('avg-impact').textContent = data.stats.avgImpact.toFixed(2);
        
        // Render insights
        const insightsContainer = document.getElementById('insights-container');
        insightsContainer.innerHTML = data.insights.map(insight => `
            <div class="insight-card ${insight.priority}-priority">
                <div class="insight-header">
                    <span class="insight-type">${insight.type}</span>
                    <span class="insight-priority priority-${insight.priority}">${insight.priority}</span>
                </div>
                <p class="insight-description">${insight.description}</p>
                <div class="insight-action">
                    <strong>Recommended Action:</strong> ${insight.action}
                </div>
                <div class="insight-confidence">
                    <span>Confidence: ${(insight.confidence * 100).toFixed(0)}%</span>
                    <div class="confidence-bar">
                        <div class="confidence-fill" style="width: ${insight.confidence * 100}%"></div>
                    </div>
                </div>
            </div>
        `).join('');
        
        // Render predictions
        const predictionsContainer = document.getElementById('predictions-container');
        predictionsContainer.innerHTML = data.predictions.map(pred => `
            <div class="prediction-card">
                <div class="prediction-date">${pred.date}</div>
                <div class="prediction-value">${pred.value.toFixed(3)}</div>
                <div class="prediction-type">${pred.type}</div>
            </div>
        `).join('');
        
        // Update last updated time
        document.getElementById('last-updated').textContent = 
            `Last updated: ${new Date().toLocaleString()}`;
    }
    
    function showError() {
        document.getElementById('insights-container').innerHTML = `
            <div class="loading-state">
                <p style="color: #e74c3c;">‚ùå Error loading dashboard data. Please try again.</p>
            </div>
        `;
    }
    
    // Load data on page load
    document.addEventListener('DOMContentLoaded', loadDashboardData);
</script>