<section class="content-section">
    <div class="container">
        <div class="contact-grid">
            <div class="contact-info">
                <h2>Get in Touch</h2>
                <p>Have questions about our content, products, or just want to say hello? We're here to help!</p>
                
                <div class="contact-methods">
                    <div class="contact-method">
                        <h3>Email</h3>
                        <p><a href="mailto:hello@fueltheaura.com">hello@fueltheaura.com</a></p>
                        <p>For general inquiries and support</p>
                    </div>
                    
                    <div class="contact-method">
                        <h3>Partnerships</h3>
                        <p><a href="mailto:partners@fueltheaura.com">partners@fueltheaura.com</a></p>
                        <p>For product collaborations and sponsorships</p>
                    </div>
                    
                    <div class="contact-method">
                        <h3>Newsletter</h3>
                        <p><a href="#">Subscribe Here</a></p>
                        <p>Weekly energy optimization tips</p>
                    </div>
                </div>
                
                <div class="social-links">
                    <h3>Connect With Us</h3>
                    <p><a href="#">Twitter</a> | <a href="#">Instagram</a> | <a href="#">Facebook</a></p>
                </div>
            </div>
            
            <div class="contact-form">
                <h2>Send a Message</h2>
                <form>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" id="subject" name="subject" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" rows="5" required></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>